<body>

<div class="container">
  <div class="title">מכשירי יצור</div>

  <div class="input-row">
    <label>NOM</label>
    <input type="number" step="any" id="nominal" inputmode="decimal">
  </div>
  <div class="input-row">
    <label>TOL+</label>
    <input type="number" step="any" id="upperTol" inputmode="decimal">
  </div>
  <div class="input-row">
    <label>TOL−</label>
    <input type="number" step="any" id="lowerTol" inputmode="decimal">
  </div>

  <div class="result" id="result"></div>

  <button onclick="calculate()">חשב</button>
  <button class="reset-btn" onclick="resetCalc()">איפוס</button>
</div>

<script>
function format(v) {
  return parseFloat(v).toFixed(3);
}

function calculate() {
  const nominal = parseFloat(document.getElementById("nominal").value);
  const upperInput = document.getElementById("upperTol").value;
  const lowerInput = document.getElementById("lowerTol").value;

  let upper = parseFloat(upperInput);
  let lower = parseFloat(lowerInput);

  const resultEl = document.getElementById("result");

  if (isNaN(nominal)) {
    resultEl.style.display = "block";
    resultEl.innerHTML = "יש להזין ערך נומינלי תקין";
    return;
  }

  if (isNaN(upper)) upper = 0;
  if (isNaN(lower)) lower = 0;

  const max = nominal + upper;
  const min = nominal - lower;
  const range = max - min;

  let output = "";
  if (upper > 0) {
    output += <div><strong class="highlight">MAX:</strong> <span class="highlight">+${format(max)}</span></div>;
  }
  if (lower > 0) {
    output += <div><strong class="highlight">MIN:</strong> <span class="highlight">−${format(min)}</span></div>;
  }
  if (upper > 0 && lower > 0) {
    output += <hr><div><strong>RANGE:</strong> ${format(range)}</div>;
  }

  resultEl.style.display = output ? "block" : "none";
  resultEl.innerHTML = output;
}

function handleDelete(e) {
  const active = document.activeElement;
  if (e.key === 'Delete' && active.tagName === 'INPUT') {
    const start = active.selectionStart;
    const end = active.selectionEnd;
    if (start === end && start > 0) {
      const val = active.value;
      active.value = val.substring(0, start - 1) + val.substring(end);
      active.setSelectionRange(start - 1, start - 1);
      e.preventDefault();
    }
  }
  if (e.key === 'Enter') {
    calculate();
  }
}

document.addEventListener('keydown', handleDelete);

document.addEventListener("DOMContentLoaded", function() {
  const inputs = document.querySelectorAll("input");
  inputs.forEach(input => {
    input.addEventListener("keypress", function(e) {
      if (e.key === "Enter") {
        e.preventDefault();
        calculate();
      }
    });
  });
});

function resetCalc() {
  document.getElementById("nominal").value = "";
  document.getElementById("upperTol").value = "";
  document.getElementById("lowerTol").value = "";
  const resultEl = document.getElementById("result");
  resultEl.innerHTML = "";
  resultEl.style.display = "none";
}
</script>

</body>
